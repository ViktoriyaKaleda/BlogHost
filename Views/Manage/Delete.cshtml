@model BlogHosting.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Manage/_Layout.cshtml";
}

<h2>Are you want to delete this account?</h2>
<h5>All user data will be deleted.</h5>

<div class="form-horizontal">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h2 class="panel-title">Account</h2>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3 col-lg-3 " align="center">
                    <img alt="User Pic" src="@Url.Content(Model.AvatarPath ?? "~/Avatars/default.png")" class="img-responsive">
                </div>
                <div class=" col-md-9 col-lg-9 ">
                    <table class="table table-user-information">
                        <tbody>
                            <tr>
                                <td>Username:</td>
                                <td>@Html.DisplayFor(model => model.UserName)</td>
                            </tr>
                            <tr>
                                <td>First name:</td>
                                <td>@Html.DisplayFor(model => model.FirstName)</td>
                            </tr>
                            <tr>
                                <td>Last name:</td>
                                <td>@Html.DisplayFor(model => model.LastName)</td>
                            </tr>
                            <tr>
                                <td>Email:</td>
                                <td>@Html.DisplayFor(model => model.Email)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="GetAllUsers">Back to List</a>
</form>
